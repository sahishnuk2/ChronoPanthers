<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bp" prefHeight="760.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.AIAgentController">
    <top>
        <VBox styleClass="header-section">
            <children>
                <fx:include fx:id="navigationBar" source="navigationBar.fxml" />
                <HBox alignment="CENTER_LEFT" styleClass="top-bar">
                    <children>
                        <Label fx:id="usernameLabel" styleClass="username-label" text="Study AI Assistant" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="statusLabel" styleClass="status-label" text="Ready" />
                    </children>
                </HBox>

                <!-- Title Section -->
                <VBox alignment="CENTER" styleClass="title-section">
                    <children>
                        <Label styleClass="main-title" text="ðŸŽ“ Study &amp; Focus AI Assistant" />
                        <Label styleClass="subtitle" text="Your personalized study companion for better focus and productivity" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox styleClass="main-content">
            <children>
                <!-- Quick Action Buttons -->
                <HBox alignment="CENTER" spacing="15.0" styleClass="quick-actions">
                    <children>
                        <Button fx:id="analyzeTasksButton" onAction="#analyzeTasksAndPriorities" styleClass="action-button, analyze-btn" text="ðŸ“Š Analyze Tasks" />
                        <Button fx:id="createStudyPlanButton" onAction="#createStudyPlan" styleClass="action-button, plan-btn" text="ðŸ“… Create Study Plan" />
                        <Button fx:id="pomodoroAdviceButton" onAction="#getPomodoroAdvice" styleClass="action-button, pomodoro-btn" text="ðŸ… Pomodoro Tips" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Chat Area -->
                <VBox styleClass="chat-container" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="ðŸ’¬ Chat with Your Study AI" />

                        <!-- Chat History -->
                        <ScrollPane fx:id="chatScrollPane" fitToWidth="true" styleClass="chat-scroll" VBox.vgrow="ALWAYS">
                            <content>
                                <TextArea fx:id="chatHistory" editable="false" styleClass="chat-history" wrapText="true" />
                            </content>
                        </ScrollPane>

                        <!-- Input Area -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-area">
                            <children>
                                <TextField fx:id="messageInput" promptText="Ask me anything about studying, focus, or task management..." styleClass="message-input" HBox.hgrow="ALWAYS" />
                                <Button fx:id="sendButton" disable="true" onAction="#sendMessage" styleClass="send-button" text="Send" />
                                <ProgressIndicator fx:id="loadingIndicator" maxHeight="25.0" maxWidth="25.0" visible="false" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <children>
                <Label styleClass="footer-text" text="ðŸ’¡ Tip: Ask me to analyze your tasks, create study plans, or optimize your Pomodoro sessions!" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
