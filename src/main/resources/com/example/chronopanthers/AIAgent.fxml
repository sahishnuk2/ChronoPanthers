<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.AIAgentController">
    <top>
        <VBox styleClass="header-section">
            <children>
                <!-- Header with user info and navigation -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="top-bar">
                    <children>
                        <Label fx:id="usernameLabel" styleClass="username-label" text="Study AI Assistant" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="statusLabel" styleClass="status-label" text="Ready" />
                        <MenuButton styleClass="menu-button" text="Menu">
                            <items>
                                <MenuItem onAction="#goToTimer" text="🍅 Pomodoro Timer" />
                                <MenuItem onAction="#goToTaskManager" text="📋 Task Manager" />
                                <SeparatorMenuItem />
                                <MenuItem onAction="#logout" text="🚪 Logout" />
                            </items>
                        </MenuButton>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Title Section -->
                <VBox alignment="CENTER" styleClass="title-section">
                    <children>
                        <Label styleClass="main-title" text="🎓 Study &amp; Focus AI Assistant" />
                        <Label styleClass="subtitle" text="Your personalized study companion for better focus and productivity" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="15.0" styleClass="main-content">
            <children>
                <!-- Quick Action Buttons -->
                <HBox alignment="CENTER" spacing="15.0" styleClass="quick-actions">
                    <children>
                        <Button fx:id="analyzeTasksButton" onAction="#analyzeTasksAndPriorities" styleClass="action-button, analyze-btn" text="📊 Analyze Tasks" />
                        <Button fx:id="createStudyPlanButton" onAction="#createStudyPlan" styleClass="action-button, plan-btn" text="📅 Create Study Plan" />
                        <Button fx:id="pomodoroAdviceButton" onAction="#getPomodoroAdvice" styleClass="action-button, pomodoro-btn" text="🍅 Pomodoro Tips" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>

                <!-- Chat Area -->
                <VBox VBox.vgrow="ALWAYS" styleClass="chat-container">
                    <children>
                        <Label styleClass="section-title" text="💬 Chat with Your Study AI" />

                        <!-- Chat History -->
                        <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="chat-scroll">
                            <content>
                                <TextArea fx:id="chatHistory" editable="false" wrapText="true" styleClass="chat-history" />
                            </content>
                        </ScrollPane>

                        <!-- Input Area -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-area">
                            <children>
                                <TextField fx:id="messageInput" promptText="Ask me anything about studying, focus, or task management..." HBox.hgrow="ALWAYS" styleClass="message-input" />
                                <Button fx:id="sendButton" disable="true" onAction="#sendMessage" styleClass="send-button" text="Send" />
                                <ProgressIndicator fx:id="loadingIndicator" maxHeight="25.0" maxWidth="25.0" visible="false" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <children>
                <Label styleClass="footer-text" text="💡 Tip: Ask me to analyze your tasks, create study plans, or optimize your Pomodoro sessions!" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>