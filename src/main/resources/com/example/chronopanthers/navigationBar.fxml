<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox maxWidth="600.0" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #4a90e2; -fx-padding: 8px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.NavigationController">
    <children>
        <Label prefHeight="18.0" prefWidth="53.0" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" text="🍅 CP">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Label>

        <HBox prefHeight="24.0" prefWidth="364.0" spacing="3.0" HBox.hgrow="ALWAYS">
            <children>
                <Button onAction="#goToTimer" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3px; -fx-background-radius: 3px; -fx-padding: 4 6; -fx-font-size: 11px;" text="🍅 Timer" />
                <Button onAction="#goToTaskManager" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3px; -fx-background-radius: 3px; -fx-padding: 4 6; -fx-font-size: 11px;" text="📋 Tasks" />
                <Button onAction="#goToAIAgent" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3px; -fx-background-radius: 3px; -fx-padding: 4 6; -fx-font-size: 11px;" text="🤖 AI" />
                <Button onAction="#goToStats" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3px; -fx-background-radius: 3px; -fx-padding: 4 6; -fx-font-size: 11px;" text="📊 Stats" />
            </children>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="5.0">
            <children>
                <Label fx:id="usernameLabel" style="-fx-text-fill: white; -fx-font-size: 11px;" text="shawn" />
                <Button onAction="#logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 3px; -fx-background-radius: 3px; -fx-padding: 4 6; -fx-font-size: 11px;" text="🚪" />
            </children>
        </HBox>
    </children>
</HBox>
