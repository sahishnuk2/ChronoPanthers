<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.TaskManager">
    <children>
        <fx:include fx:id="navigationBar" source="navigationBar.fxml" />

        <AnchorPane fx:id="mainPane" prefHeight="720.0" prefWidth="600.0">
            <children>
      <TableView fx:id="taskTable" layoutX="6.0" layoutY="94.0" prefHeight="580.0" prefWidth="589.0">
        <columns>
          <TableColumn fx:id="type" prefWidth="75.0" resizable="false" text="Task Type" />
          <TableColumn fx:id="name" prefWidth="171.0" text="Name" />
            <TableColumn fx:id="dueDate" prefWidth="92.0" resizable="false" text="Due Date" />
            <TableColumn fx:id="completed" prefWidth="75.0" resizable="false" text="Completed" />
            <TableColumn fx:id="overdue" minWidth="5.0" prefWidth="63.0" resizable="false" text="Overdue" />
            <TableColumn fx:id="priority" minWidth="5.0" prefWidth="95.0" resizable="false" text="Priority" />
        </columns>
      </TableView>
      <Button layoutX="338.0" layoutY="680.0" mnemonicParsing="false" onAction="#addTask" text="Add Task" />
      <ComboBox fx:id="sortBox" layoutX="6.0" layoutY="64.0" prefHeight="26.0" prefWidth="158.0" />
      <Label fx:id="sorterLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="684.0" prefHeight="17.0" prefWidth="316.0" />
      <Button fx:id="completeTaskButton" layoutX="414.0" layoutY="680.0" mnemonicParsing="false" onAction="#completeTask" text="Complete" />
      <Button fx:id="deleteTaskButton" layoutX="534.0" layoutY="680.0" mnemonicParsing="false" onAction="#deleteTask" text="Delete" />
      <TextField fx:id="searchName" layoutX="454.0" layoutY="64.0" prefHeight="26.0" prefWidth="132.0" />
      <Label layoutX="408.0" layoutY="69.0" text="Search " />
      <Label alignment="CENTER" layoutX="108.0" layoutY="5.0" prefHeight="17.0" prefWidth="386.0" text="Tasks">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
      </Label>
      <ComboBox fx:id="typeFilter" layoutX="288.0" layoutY="64.0" prefHeight="26.0" prefWidth="111.0" />
      <ComboBox fx:id="priorityFilter" layoutX="167.0" layoutY="64.0" prefHeight="26.0" prefWidth="117.0" />
      <Label layoutX="6.0" layoutY="48.0" prefHeight="17.0" prefWidth="117.0" text="Sort By:" />
      <Label layoutX="288.0" layoutY="48.0" prefHeight="17.0" prefWidth="117.0" text="Filter by Task Type:" />
      <Label layoutX="167.0" layoutY="48.0" prefHeight="17.0" prefWidth="117.0" text="Filter by Priority:" />
      <Button fx:id="editButton" layoutX="491.0" layoutY="680.0" mnemonicParsing="false" onAction="#editTask" text="Edit" />
            </children>
        </AnchorPane>
    </children>
</VBox>
