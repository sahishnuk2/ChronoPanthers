<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="719.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.TaskManager">
   <children>
      <TableView fx:id="taskTable" layoutX="6.0" layoutY="94.0" prefHeight="580.0" prefWidth="589.0">
        <columns>
          <TableColumn fx:id="type" prefWidth="75.0" resizable="false" text="Task Type" />
          <TableColumn fx:id="name" prefWidth="171.0" text="Name" />
            <TableColumn fx:id="dueDate" prefWidth="92.0" resizable="false" text="Due Date" />
            <TableColumn fx:id="completed" prefWidth="75.0" resizable="false" text="Completed" />
            <TableColumn fx:id="overdue" minWidth="5.0" prefWidth="63.0" resizable="false" text="Overdue" />
            <TableColumn fx:id="priority" minWidth="5.0" prefWidth="95.0" resizable="false" text="Priority" />
        </columns>
      </TableView>
      <Button layoutX="438.0" layoutY="52.0" mnemonicParsing="false" onAction="#addTask" text="Add Task" />
      <Button fx:id="timerButton" layoutX="92.0" layoutY="52.0" mnemonicParsing="false" onAction="#timer" text="Timer" />
      <Button fx:id="sortButton" layoutX="351.0" layoutY="52.0" mnemonicParsing="false" onAction="#sortTasks" text="Sorter" />
      <ComboBox fx:id="sortBox" layoutX="176.0" layoutY="52.0" prefWidth="150.0" />
      <Label fx:id="sorterLabel" layoutX="176.0" layoutY="77.0" prefHeight="17.0" prefWidth="158.0" />
      <Button fx:id="completeTaskButton" layoutX="337.0" layoutY="679.0" mnemonicParsing="false" onAction="#completeTask" text="Complete" />
      <Button fx:id="deleteTaskButton" layoutX="194.0" layoutY="679.0" mnemonicParsing="false" onAction="#deleteTask" text="Delete" />
   </children>
</AnchorPane>
