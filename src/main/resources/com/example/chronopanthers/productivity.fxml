<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chronopanthers.Productivity">
    <children>
        <!-- Navigation Bar -->
        <fx:include fx:id="navigationBar" source="navigationBar.fxml" />

        <!-- Original Content wrapped in AnchorPane to maintain layout -->
        <AnchorPane prefHeight="720.0" prefWidth="600.0">
            <children>
                <!-- Header -->
                <Label alignment="CENTER" layoutX="150.0" layoutY="14.0" prefHeight="35.0" prefWidth="300.0" text="📊 Productivity Statistics">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Time Period Selection -->
                <HBox layoutX="200.0" layoutY="60.0" spacing="10.0">
                    <children>
                        <RadioButton fx:id="weekly" selected="true" text="Weekly" toggleGroup="$statsPer" />
                        <RadioButton fx:id="monthly" text="Monthly" toggleGroup="$statsPer" />
                        <RadioButton fx:id="yearly" text="Yearly" toggleGroup="$statsPer" />
                    </children>
                </HBox>

                <!-- Charts in 2x2 Grid -->
                <GridPane layoutX="20.0" layoutY="100.0" prefHeight="580.0" prefWidth="560.0" hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- Tasks Chart -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <Label text="✅ Tasks Completed" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                <BarChart fx:id="taskChart" prefHeight="250.0" prefWidth="250.0">
                                    <xAxis>
                                        <CategoryAxis fx:id="taskxAxis" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="taskyAxis" side="LEFT" />
                                    </yAxis>
                                </BarChart>
                            </children>
                        </VBox>

                        <!-- Work Sessions Chart -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <Label text="🍅 Work Sessions" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                <BarChart fx:id="workSessionsChart" prefHeight="250.0" prefWidth="250.0">
                                    <xAxis>
                                        <CategoryAxis fx:id="workSessxAxis" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="workSessyAxis" side="LEFT" />
                                    </yAxis>
                                </BarChart>
                            </children>
                        </VBox>

                        <!-- Duration Chart -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <children>
                                <Label text="⏱️ Study Duration" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                <BarChart fx:id="durationChart" prefHeight="250.0" prefWidth="250.0">
                                    <xAxis>
                                        <CategoryAxis fx:id="durationxAxis" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="durationyAxis" side="LEFT" />
                                    </yAxis>
                                </BarChart>
                            </children>
                        </VBox>

                        <!-- Pie Chart -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label text="⚖️ Work vs Break Balance" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                                <PieChart fx:id="durationPieChart" prefHeight="250.0" prefWidth="250.0" />
                            </children>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
    </children>

    <!-- ToggleGroup Definition -->
    <fx:define>
        <ToggleGroup fx:id="statsPer" />
    </fx:define>
</VBox>